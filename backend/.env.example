# Database Configuration
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/intellifolio
# For SQLite (default):
# DATABASE_URL=sqlite:///intellifolio.db
DEBUG=false

# Firebase Configuration (from Firebase Console → Project settings → Service accounts)
# Generate a new private key and paste details here, or use the Firebase Admin SDK
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# GitHub API (Get at https://github.com/settings/tokens)
GITHUB_API_TOKEN=your_github_personal_access_token

# Gemini API Configuration (Get at https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key

# OpenRouter API Configuration (Optional: for AI suggestions, get at https://openrouter.ai/keys)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free (or another model)
OPENROUTER_REFERER=http://localhost:3000

# Server
PORT=8000
HOST=0.0.0.0
